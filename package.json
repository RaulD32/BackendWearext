{
  "name": "talking",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --quiet --watch src --ext ts --exec \"node --no-warnings --loader ts-node/esm\" src/server.ts",
    "dev:verbose": "nodemon --watch src --ext ts --exec \"node --loader ts-node/esm\" src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "migrate": "docker exec -i talking_children_mysql mysql -u talking_user -ptalking_pass_2024 talking_children < migrate.sql",
    "seed": "node --no-warnings --loader ts-node/esm src/seeders/run.ts",
    "seed:dev": "nodemon --watch src/seeders --ext ts --exec \"node --no-warnings --loader ts-node/esm\" src/seeders/run.ts",
    "generate-mp3": "node generate-mp3.js",
    "generate-mp3-windows": "node generate-mp3-windows.js",
    "generate-mp3-final": "node generate-mp3-final.js",
    "docker:start": "start-docker.bat",
    "docker:stop": "docker-compose down",
    "docker:restart": "docker-compose restart",
    "docker:logs": "docker-compose logs -f mysql",
    "docker:clean": "docker-compose down -v && docker system prune -f"
  },
  "dependencies": {
    "@types/cors": "^2.8.19",
    "@types/joi": "^17.2.2",
    "@types/multer": "^2.0.0",
    "@types/socket.io": "^3.0.1",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/ws": "^8.18.1",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "edge-tts": "^1.0.1",
    "express": "^5.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "google-tts-api": "^2.0.2",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "mysql2": "^3.14.2",
    "node-powershell": "^5.0.1",
    "puppeteer": "^24.15.0",
    "qrcode-terminal": "^0.12.0",
    "say": "^0.16.0",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typescript": "^5.8.3",
    "whatsapp-web.js": "^1.31.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.0.13",
    "@types/qrcode-terminal": "^0.12.2",
    "nodemon": "^3.1.10",
    "ts-node-dev": "^2.0.0"
  },
